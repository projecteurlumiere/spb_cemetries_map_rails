<h2 class="list-heading">Старые и новые кладбища Петербурга</h2>
<ul id="cemetery-list">
  <% Cemetery.all.each do |cemetery| %>
    <li class="list-entry">
      <%= image_tag Photo.find_by(cemetery_id: cemetery.id).link, class: "list-entry-pic" %>
      <%= link_to cemetery.name, cemetery_path(cemetery.id), class: 'list-entry-name', 
        data: { turbo_frame: 'entry',
        controller: 'cemetery',
        turbo_action: 'advance',
        action: 'click->map#toEntry',
        'cemetery-id-value': cemetery.id,
        'cemetery-coordinates-value': cemetery.coordinates } %>
    </li>
    <br>
  <% end %>
</ul>
